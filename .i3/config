bar {
    verbose yes
    status_command i3blocks -c ~/.i3block.conf
    bindsym button4 nop
    bindsym button5 nop
    height 20
    position bottom
    font pango:FontAwesome 12, Hack-Regular 12
    tray_output eDP-1
    colors {
      statusline    #999999
      background    #131D24

      focused_workspace #232D34 #232D34 #93AE03
      active_workspace  #232D34 #232D34 #999999
      inactive_workspace  #131D24 #131D24 #999999
      urgent_workspace  #999999 #999999 #B33A3A
    }
}

