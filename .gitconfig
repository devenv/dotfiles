[user]
  name = Boris Churzin
  email = boris@dynamicyield.com
[alias]
  ci = commit
  st = status
  co = checkout
  br = branch
  pul = pull
  merge = merge -Xignore-all-space
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
  mylog = log --pretty=format:'%h %s [%an]' --graph
  slog = log --pretty=format:'%C(auto)%h %C(green)%aN%Creset %s'
  di = diff -w
  dc = diff --cached -w
  dh = show HEAD -w
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  fa = fetch --all
  pr = pull --rebase

  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && ~/bin/show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && ~/bin/pretty_git_log"
  la = !git l --all
[core]
  autocrlf = input
  eol = lf
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[merge]
  tool = diffconflicts
[diff]
  tool = meld
[push]
  default = current
[advice]
  commitBeforeMerge = true
[init]
  templatedir = /home/devenv/.git-templates
[mergetool "diffconflicts"]
  cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
  trustExitCode = true
[mergetool]
  keepBackup = false
[credential]
  helper = cache --timeout=680400
