# Navigation
alt - h : yabai -m display --focus west
alt - l : yabai -m display --focus east

# Fullscreen toggle
alt - f : yabai -m window --toggle zoom-fullscreen

# Equalize size of windows
alt - e : yabai -m space --balance
alt - s : yabai -m config layout stack
alt - w : yabai -m config layout bsp

# Toggle split v/h for active window
alt - d : bash -c '$(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --toggle split)'
