# Navigation
cmd + alt - h : yabai -m window --focus west || yabai -m window --focus north
cmd + alt - l : yabai -m window --focus east || yabai -m window --focus south
cmd + alt - k : yabai -m window --focus north || yabai -m window --focus north
cmd + alt - j : yabai -m window --focus south || yabai -m window --focus north

cmd + alt - 0x2C : yabai -m window --toggle zoom-fullscreen

cmd + alt - 0x2B : yabai -m config layout bsp
cmd + alt - 0x2F : yabai -m config layout stack

# Toggle split v/h for active window
cmd + alt - 0x27 : bash -c '$(yabai -m window $(yabai -m query --windows --window | jq -re ".id"alt - 0x27 : bash -c '$(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --toggle split)' --toggle split)'
