{
  "title": "Ctrl to Cmd in iterm",
  "maintainers": [
    "devenv"
  ],
  "rules": [
    {
      "description": "LCtrl => LCommand [+Iterm2]",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "LCommand => LCtrl [+Iterm2]",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "left_command"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
