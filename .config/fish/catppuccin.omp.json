{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "os": "#ACB0BE",
    "pink": "#F5BDE6",
    "red": "#FF7777",
    "lavender": "#B7BDF8",
    "green": "#ADF48A",
    "blue": "#8AADF4",
    "yellow": "#ebcc34",
    "wight": "#FFFFFF",
    "text": "#111016"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "type": "kubectl",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#000000",
          "background": "",
          "background_templates": [
            "{{ if eq .Context \"minikube\" }}p:green{{end}}",
            "{{ if eq .Context \"staging\" }}p:yellow{{end}}",
            "{{ if eq .Context \"prod\" }}p:red{{end}}"
          ],
          "template": "\ue0c8\u2388{{.Context}}{{if .Namespace}}::{{.Namespace}}{{end}}\ue0c7"
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#000000",
          "background": "p:blue",
          "template": "{{ if .Error }} {{ .Error }} {{ else }}{{ if .Venv }}\ue0c6 {{ .Venv }} \ue0c7{{ end }}{{ end }}"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#193549",
          "background": "p:blue",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:blue{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:pink{{ end }}",
            "{{ if gt .Ahead 0 }}p:pink{{ end }}",
            "{{ if gt .Behind 0 }}p:pink{{ end }}"
          ],
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_upstream_icon": false
          },
          "template": "\ue0c6[{{ .RepoName }}] {{ .HEAD }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }} \ue0c7"
        },
        {
          "type": "path",
          "style": "diamond",
          "background": "p:green",
          "foreground": "p:text",
          "leading_diamond": "",
          "trailing_diamond": "",
          "properties": {
            "folder_icon": "..\ue5fe..",
            "home_icon": "~",
            "style": "agnoster_short"
          },
          "template": "\ue0c6 {{ .Path }} "
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "exit",
          "style": "diamond",
          "background": "p:red",
          "foreground": "p:text",
          "trailing_diamond": "",
          "properties": {
            "always_enabled": false
          },
          "template": "\ue0c6 {{ .Code }} \ue0c7"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "background": "p:pink",
          "foreground": "p:text",
          "properties": {
            "threshold": 500,
            "style": "austin"
          },
          "template": "\ue0c6 {{ .FormattedMs }} \ue0c7"
        },
        {
          "type": "time",
          "style": "plain",
          "background": "p:lavender",
          "foreground": "p:text",
          "properties": {
            "time_format": "_2,15:04"
          },
          "template": "\ue0c6 {{ .CurrentDate | date .Format }} \ue0c7"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "p:green",
          "foreground_templates": ["{{ if gt .Code 0 }}p:red{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "template": "\ue0c8"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
